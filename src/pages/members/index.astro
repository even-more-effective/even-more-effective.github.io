<style>
  /* Estilos generales */
  .members-container {
    padding: 2rem 0 4rem;
    min-height: 100vh;
  }
  
  .container {
    width: 90%;
    max-width: 1200px;
    margin: 0 auto;
  }
  
  .header-section {
    text-align: center;
    margin-bottom: 3rem;
  }
  
  h1 {
    font-size: 2.5rem;
    margin-bottom: 0.5rem;
  }
  
  .subtitle {
    color: var(--color-text-secondary);
    max-width: 700px;
    margin: 0 auto;
  }
  
  /* Grid de equipo */
  .team-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px,1fr));
    gap: 10rem;
    margin-bottom: 4rem;
  }
  
  .member-card {
    perspective: 2000px;
    height: 420px; /* Altura aumentada para acomodar fotos de retrato */
  }
  
  .card-inner {
    position: relative;
    width: 100%;
    height: 100%;
    transition: transform 0.8s;
    transform-style: preserve-3d;
  }
  
  .member-card:hover .card-inner {
    transform: rotateY(180deg);
  }
  
  .card-front, .card-back {
    position: absolute;
    width: 100%;
    height: 100%;
    -webkit-backface-visibility: hidden;
    backface-visibility: hidden;
    border-radius: 1rem;
    overflow: hidden;
  }
  
  .card-front {
    background-color: #1e1e1e;
    display: flex;
    flex-direction: column;
    border: 1px solid rgba(255, 255, 255, 0.1);
  }
  
  .card-back {
    background: linear-gradient(145deg, #252525 0%, #1a1a1a 100%);
    transform: rotateY(180deg);
    padding: 1.8rem;
    display: flex;
    flex-direction: column;
    border: 1px solid rgba(139, 107, 255, 0.3);
  }
  
  .member-image-portrait {
    height: 75%; /* Mayor altura para las fotos de retrato */
    overflow: hidden;
  }
  
  .member-image-portrait img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
  }
  
  .member-card:hover .member-image-portrait img {
    transform: scale(1.05);
  }
  
  .member-info {
    padding: 1rem;
    text-align: center;
  }
  
  .member-info h3 {
    font-size: 1.2rem;
    margin-bottom: 0.3rem;
  }
  
  .role {
    color: var(--color-accent);
    font-size: 0.9rem;
  }
  
  .card-back h3 {
    color: var(--color-accent);
    margin-bottom: 1rem;
    font-size: 1.2rem;
  }
  
  .bio {
    margin-bottom: 1.2rem;
    line-height: 1.5;
    font-size: 0.9rem;
    flex-grow: 1;
  }
  
  .focus-areas {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-bottom: 1.2rem;
  }
  
  .focus-tag {
    background-color: rgba(139, 107, 255, 0.15);
    color: var(--color-accent);
    padding: 0.3rem 0.8rem;
    border-radius: 2rem;
    font-size: 0.75rem;
    font-weight: 500;
  }
  
  .contact-info {
    display: flex;
    align-items: center;
    gap: 5 rem;
    font-size: 0.85rem;
    color: var(--color-text-secondary);
  }
  
  /* Banner de unirse */
  .join-team-banner {
    background: linear-gradient(135deg, rgba(139, 107, 255, 0.1) 0%, rgba(139, 107, 255, 0.2) 100%);
    border-radius: 1rem;
    padding: 2.5rem;
    margin: 4rem 0;
    position: relative;
    overflow: hidden;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  
  .banner-content {
    max-width: 70%;
    z-index: 2;
  }
  
  .banner-content h2 {
    font-size: 1.8rem;
    margin-bottom: 1rem;
    background: linear-gradient(90deg, var(--color-accent) 0%, var(--color-accent-hover) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }
  
  .banner-content p {
    margin-bottom: 1.5rem;
    line-height: 1.6;
  }
  
  .banner-btn {
    display: inline-block;
    background-color: var(--color-accent);
    color: white;
    padding: 0.8rem 1.5rem;
    border-radius: 0.5rem;
    font-weight: 600;
    transition: all 0.3s ease;
  }
  
  .banner-btn:hover {
    background-color: var(--color-accent-hover);
    transform: translateY(-3px);
    text-decoration: none;
  }
  
  .banner-decoration {
    position: absolute;
    top: 50%;
    right: 5%;
    transform: translateY(-50%);
    opacity: 0.7;
  }
  
  /* Sección de asesores */
  .advisors-section {
    margin: 4rem 0;
  }
  
  .advisors-section h2 {
    font-size: 1.8rem;
    margin-bottom: 2rem;
    text-align: center;
  }
  
  .advisors-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(500px, 1fr));
    gap: 2rem;
  }
  
  .advisor-card {
    display: flex;
    background-color: #1e1e1e;
    border-radius: 1rem;
    overflow: hidden;
    border: 1px solid rgba(255, 255, 255, 0.1);
    transition: all 0.3s ease;
  }
  
  .advisor-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
    border-color: rgba(139, 107, 255, 0.3);
  }
  
  .advisor-image {
    flex: 0 0 35%;
    overflow: hidden;
  }
  
  .advisor-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
  }
  
  .advisor-card:hover .advisor-image img {
    transform: scale(1.05);
  }
  
  .advisor-info {
    flex: 1;
    padding: 1.5rem;
  }
  
  .advisor-info h3 {
    font-size: 1.3rem;
    margin-bottom: 0.3rem;
  }
  
  .position {
    color: var(--color-accent);
    font-size: 0.9rem;
    margin-bottom: 1rem;
  }
  
  /* Sección de valores */
  .values-section {
    margin: 4rem 0 2rem;
  }
  
  .values-section h2 {
    font-size: 1.8rem;
    margin-bottom: 2rem;
    text-align: center;
  }
  
  .values-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 1.5rem;
  }
  
  .value-card {
    background-color: #1e1e1e;
    border-radius: 1rem;
    padding: 1.5rem;
    border: 1px solid rgba(255, 255, 255, 0.1);
    transition: all 0.3s ease;
    text-align: center;
  }
  
  .value-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
    border-color: rgba(139, 107, 255, 0.3);
  }
  
  .value-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto 1rem;
    width: 64px;
    height: 64px;
    border-radius: 50%;
    background-color: rgba(139, 107, 255, 0.1);
    color: var(--color-accent);
  }
.value-card h4 {
    font-size: 1.2rem;
    margin-bottom: 0.8rem;
  }
  
  .value-card p {
    font-size: 0.9rem;
    color: var(--color-text-secondary);
    line-height: 1.5;
  }
  
  /* Media queries */
  @media (max-width: 968px) {
    .team-grid {
      grid-template-columns: repeat(3, 1fr);
      gap: 1.5rem;
    }
    
    .advisors-grid {
      grid-template-columns: 1fr;
    }
  }
  
  @media (max-width: 768px) {
    .team-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 1.5rem;
    }
    
