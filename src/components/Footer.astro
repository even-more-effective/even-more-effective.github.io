<style>
  footer {
    padding: 2rem 0;
    margin-top: 4rem;
    background-color: var(--color-footer-bg, #0c0c0c);
    border-top: 1px solid rgba(255, 255, 255, 0.05);
    text-align: center; /* Centrar el contenido del footer */
  }

  .footer-content {
    display: flex;
    flex-direction: column; /* Alinear los elementos verticalmente */
    align-items: center; /* Centrar los elementos horizontalmente */
  }

  .social-icons-footer {
    display: flex;
    justify-content: center;
    gap: 1.75rem; /* Espacio entre iconos */
    margin-bottom: 1.75rem; /* Espacio inferior */
  }

  .social-icon-footer {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 45px; /* Tamaño del contenedor */
    height: 45px; /* Tamaño del contenedor */
    border-radius: 50%;
    background-color: rgba(255, 255, 255, 0.1); /* Fondo sutil */
    color: #fff; /* Color para el SVG de Instagram */
    transition: all 0.3s ease;
    overflow: hidden; /* Para que la imagen respete el border-radius */
  }

  .social-icon-footer:hover {
    background-color: rgba(255, 255, 255, 0.2);
    transform: scale(1.1);
  }

  .social-icon-footer img {
    display: block;
    width: 60%; /* Reducir el tamaño de la imagen de LinkedIn */
    height: 60%; /* Reducir el tamaño de la imagen de LinkedIn */
    object-fit: contain; /* Asegurar que la imagen completa se vea */
  }

  .social-icon-footer svg {
    width: 22px; /* Tamaño del SVG de Instagram */
    height: 22px; /* Tamaño del SVG de Instagram */
    fill: #fff; /* Color del SVG de Instagram */
  }

  .copyright {
    color: var(--color-text-secondary);
    font-size: 0.875rem;
  }

  /* Media queries para footer responsivo (opcional) */
  @media (max-width: 600px) {
    .social-icons-footer {
      gap: 1.25rem;
      margin-bottom: 1.25rem;
    }

    .social-icon-footer {
      width: 40px;
      height: 40px;
    }

    .social-icon-footer img {
      width: 55%;
      height: 55%;
    }

    .social-icon-footer svg {
      width: 20px;
      height: 20px;
    }

    .copyright {
      font-size: 0.8rem;
    }
  }
</style>